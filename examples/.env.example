# OAuth 2.0 Configuration
# Copy this file to .env and fill in your actual values

# OAuth 2.0 Authorization Server Configuration
OAUTH_AUTHORIZATION_SERVER=https://auth.example.com
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# Resource Server Configuration  
OAUTH_RESOURCE_URI=https://mcp.example.com
OAUTH_JWKS_URI=https://auth.example.com/.well-known/jwks.json

# Optional: Token Introspection Endpoint (if not using JWKS)
# OAUTH_INTROSPECTION_ENDPOINT=https://auth.example.com/oauth/introspect

# OAuth 2.0 Scopes (space-separated)
OAUTH_SCOPES=read write user:profile

# Server Configuration
PORT=3000

# Optional: Redis Configuration (for horizontal scaling)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Optional: Dynamic Client Registration
# OAUTH_DYNAMIC_REGISTRATION=true