{
  "name": "fastify-mcp",
  "version": "0.0.1",
  "description": "Fastify adapter for MCP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.base.json",
    "lint": "eslint --cache",
    "lint:fix": "eslint --cache --fix",
    "typecheck": "tsc -p . --noEmit",
    "test": "node --experimental-strip-types --no-warnings --test --test-concurrency=1 test/*.test.ts",
    "ci": "npm run build && npm run lint && npm run test",
    "start-demo": "node --watch examples/file-listing-server.ts | pino-pretty --colorize --translateTime 'SYS:standard' --ignore pid,hostname"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcollina/fastify-mcp.git"
  },
  "keywords": [
    "fastify",
    "mcp",
    "model",
    "context",
    "protocol"
  ],
  "author": "Matteo Collina <hello@matteocollina.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mcollina/fastify-mcp/issues"
  },
  "homepage": "https://github.com/mcollina/fastify-mcp#readme",
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.0",
    "@modelcontextprotocol/sdk": "^1.13.3",
    "@sinclair/typebox": "^0.34.37",
    "@types/node": "^24.0.10",
    "eslint": "^9.30.0",
    "fastify": "^5.4.0",
    "mqemitter-redis": "^7.1.0",
    "neostandard": "^0.12.1",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.3",
    "undici": "^7.11.0"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.0.0",
    "mqemitter": "^7.1.0"
  },
  "peerDependencies": {
    "@sinclair/typebox": "^0.34.0"
  }
}
